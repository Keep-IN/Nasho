<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".features.home_materi.PembahasanFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNomorPertanyaanUjian"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/manrope_bold"
                android:text="No. 1 "
                android:textColor="#CB7624"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSoalUjianUjian"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/manrope"
                android:text="Lorem ipsum dolor sit amet consectetur. Sagittis netus enim elit at in auctor. Pellentesque faucibus lacus in mi.  Maka dari itu ..."
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvNomorPertanyaanUjian"
                app:layout_constraintTop_toBottomOf="@+id/tvNomorPertanyaanUjian" />

            <TextView
                android:id="@+id/textView37Ujian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/manrope_bold"
                android:text="Jadi, kunci jawaban yang tepat adalah "
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvSoalUjianUjian"
                app:layout_constraintTop_toBottomOf="@+id/tvSoalUjianUjian" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2Ujian"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#015869"
                app:cardCornerRadius="26dp"
                app:layout_constraintStart_toStartOf="@+id/textView37Ujian"
                app:layout_constraintTop_toBottomOf="@+id/textView37Ujian">

                <TextView
                    android:id="@+id/textView38Ujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="A"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvJawabanBenarUjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/manrope_bold"
                android:text="Pilihan Jawaban"
                android:textColor="#384250"
                app:layout_constraintBottom_toBottomOf="@+id/cardView2Ujian"
                app:layout_constraintStart_toEndOf="@+id/cardView2Ujian"
                app:layout_constraintTop_toTopOf="@+id/cardView2Ujian" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvJawabanUjian"
                android:layout_width="303dp"
                android:layout_height="98dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E8F4F3"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvJawabanBenarUjian">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvJawabanKamuUjian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="Jawaban kamu adalah ..."
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvKesalahanUjian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="11dp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="Benar"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvJawabanKamuUjian">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvPujianUjian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/manrope_bold"
                                android:text="Kamu Hebat!"
                                android:textSize="12dp"
                                app:layout_constraintStart_toEndOf="@+id/cvJempolUjian"
                                app:layout_constraintTop_toTopOf="@+id/cvJempolUjian" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvJempolUjian"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="27dp"
                                app:cardBackgroundColor="#CEF4F1"
                                app:cardCornerRadius="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/ivMaybeUjian"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_benar" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvBPujianUjian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/manrope"
                                android:text="Terus pertahankan ya"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="@+id/cvJempolUjian"
                                app:layout_constraintStart_toEndOf="@+id/cvJempolUjian" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
