<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".features.settings.GantiKataSandi">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_bold"
        android:text="Ganti Kata Sandi"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView23" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="80dp"
        app:layout_constraintEnd_toEndOf="@+id/textView38"
        app:layout_constraintStart_toStartOf="@+id/textView38"
        app:layout_constraintTop_toBottomOf="@+id/textView38">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNamaChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Fulan Bin Fulan"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView7"
        app:layout_constraintStart_toStartOf="@+id/cardView7"
        app:layout_constraintTop_toBottomOf="@+id/cardView7" />

    <TextView
        android:id="@+id/tvEmailChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope"
        android:text="fulanbinfulan@gmail.com"
        android:textColor="#6A6A6A"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tvNamaChange"
        app:layout_constraintStart_toStartOf="@+id/tvNamaChange"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaChange" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPwLama"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bgfield"
            android:inputType="text|textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Kata Sandi Lama"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailChange" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Kata Sandi Baru"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/tilPwLama"
        app:layout_constraintTop_toBottomOf="@+id/tilPwLama" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPwBaru"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/tilPwLama"
        app:layout_constraintStart_toStartOf="@+id/tilPwLama"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bgfield"
            android:inputType="text|textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Konfirmasi Kata Sandi"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/tilPwBaru"
        app:layout_constraintTop_toBottomOf="@+id/tilPwBaru" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilKonfBaru"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/tilPwBaru"
        app:layout_constraintStart_toStartOf="@+id/tilPwBaru"
        app:layout_constraintTop_toBottomOf="@+id/textView43"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bgfield"
            android:inputType="text|textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSimpanPw"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="149dp"
        android:text="Simpan"
        android:backgroundTint="#015869"
        app:layout_constraintEnd_toEndOf="@+id/tilKonfBaru"
        app:layout_constraintStart_toStartOf="@+id/tilKonfBaru"
        app:layout_constraintTop_toBottomOf="@+id/tilKonfBaru" />
</androidx.constraintlayout.widget.ConstraintLayout>
