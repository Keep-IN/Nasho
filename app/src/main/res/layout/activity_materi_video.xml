<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.Materi.MateriVideo">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Removed cvHeader and nested ConstraintLayout, moved views here -->

            <ImageView
                android:id="@+id/ivBackVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvJudulSpekMateri"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/manrope_semibold"
                android:text="Nama judul materi"
                android:textColor="#015869"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/ivBackVideo"
                app:layout_constraintTop_toTopOf="@+id/ivBackVideo" />

            <TextView
                android:id="@+id/tvKategoriMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope"
                android:text="TextView"
                android:textColor="#015869"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/tvJudulSpekMateri"
                app:layout_constraintTop_toBottomOf="@+id/tvJudulSpekMateri" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvKategoriMateri" />

            <TextView
                android:id="@+id/tvIsiSpekMateri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manrope"
                android:text="Nahwu adalah ilmu yang mempelajari struktur kalimat dalam bahasa Arab. Fokus utama nahwu adalah bagaimana kata-kata disusun dalam sebuah kalimat agar sesuai dengan kaidah tata bahasa Arab. Nahwu mencakup aturan tentang posisi dan fungsi kata dalam kalimat, serta perubahan yang terjadi pada akhir kata karena posisi tersebut."
                android:textColor="#4D5761"
                android:textColorLink="#4D5761"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/btnNextToQuiz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/webView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextToQuiz"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginBottom="16dp"
                android:text="Mengerjakan Kuis"
                app:backgroundTint="@color/Success50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvIsiSpekMateri"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvIsiSpekMateri" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
